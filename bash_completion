#!/bin/bash

_albert()
{
    local cur prev

    cur=${COMP_WORDS[COMP_CWORD]}
    prev=${COMP_WORDS[COMP_CWORD-1]}

    case ${COMP_CWORD} in
        1)
            COMPREPLY=($(compgen -W "clone-all-repos help merge-ami-prs replace-text set-team list-repos execute list-prs remove-archived-repos merge-prs" -- ${cur}))
            ;;
        *)
            COMPREPLY=()
            ;;
    esac
}

complete -F _albert albert
